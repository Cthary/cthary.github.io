{
  "name": "warhammer-40k-battle-simulator",
  "version": "1.0.0",
  "description": "Warhammer 40k 10th Edition Battle Simulator",
  "type": "module",
  "main": "src/scripts/w40k.js",
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "test:watch": "node --test --watch test/**/*.test.js",
    "test:coverage": "c8 node --test test/**/*.test.js",
    "test:unit": "node --test test/unit/**/*.test.js",
    "test:integration": "node --test test/integration/**/*.test.js",
    "test:performance": "node --test test/performance/**/*.test.js",
    "lint": "eslint src/**/*.js test/**/*.test.js",
    "lint:fix": "eslint src/**/*.js test/**/*.test.js --fix",
    "pre-commit": "npm run lint && npm run test",
    "serve": "python -m http.server 8000",
    "build": "echo 'No build step required for vanilla JS project'",
    "validate": "npm run lint && npm run test && echo 'All checks passed!'",
    "prepare": "husky install"
  },
  "keywords": [
    "warhammer",
    "40k",
    "battle-simulator",
    "gaming",
    "dice",
    "simulation"
  ],
  "author": "Warhammer 40k Battle Simulator Team",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "c8": "^8.0.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "xml2js": "^0.6.2",
    "zod": "^4.1.1"
  }
}
